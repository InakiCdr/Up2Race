<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="Up2Racev2.Other_motorsport" Title="Other Motorsport">
	<ContentPage.Content>
				<Grid RowSpacing="5">
					<Grid.RowDefinitions>
						<RowDefinition 	/>
						<RowDefinition  />
						<RowDefinition  />
						<RowDefinition 	/>
						<RowDefinition  />
						<RowDefinition  />
						<RowDefinition  />
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition />
					</Grid.ColumnDefinitions>

					<Button Grid.Column="0" Grid.Row="0" Image="" Clicked="f1_News"/>
					<Label Text="Formula 1" Grid.Column="0" Grid.Row="0"  FontAttributes="Bold"
					TextColor="Black" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" InputTransparent="true">
					<Label.FontFamily>
						<OnPlatform x:TypeArguments="x:String">
						<OnPlatform.iOS>hurryup</OnPlatform.iOS>
						<OnPlatform.Android>hurryup.ttf#hurryup</OnPlatform.Android>
						</OnPlatform>
					</Label.FontFamily>
					</Label> 
					
					<Button Grid.Column="0" Grid.Row="1" Image="" Clicked="BSB_News" />
					<Label Text="BSB" Grid.Column="0" Grid.Row="1" FontAttributes="Bold"
					TextColor="Black" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" InputTransparent="true">
					<Label.FontFamily>
						<OnPlatform x:TypeArguments="x:String">
						<OnPlatform.iOS>hurryup</OnPlatform.iOS>
						<OnPlatform.Android>hurryup.ttf#hurryup</OnPlatform.Android>
						</OnPlatform>
					</Label.FontFamily>
					</Label> 

					<Button Grid.Column="0" Grid.Row="2" Image="" Clicked="RoadRaces_News" />
					<Label Text="Road Races" Grid.Column="0" Grid.Row="2" FontAttributes="Bold"
					TextColor="Black" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" InputTransparent="true">
					<Label.FontFamily>
						<OnPlatform x:TypeArguments="x:String">
						<OnPlatform.iOS>hurryup</OnPlatform.iOS>
						<OnPlatform.Android>hurryup.ttf#hurryup</OnPlatform.Android>
						</OnPlatform>
					</Label.FontFamily>
					</Label> 
					<Button Grid.Column="0" Grid.Row="3" Image="" Clicked="MXGP_News" />
					<Label Text="MXGP" Grid.Column="0" Grid.Row="3" FontAttributes="Bold"
					TextColor="Black" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" InputTransparent="true">
					<Label.FontFamily>
						<OnPlatform x:TypeArguments="x:String">
						<OnPlatform.iOS>hurryup</OnPlatform.iOS>
						<OnPlatform.Android>hurryup.ttf#hurryup</OnPlatform.Android>
						</OnPlatform>
					</Label.FontFamily>
					</Label> 
					<Button Grid.Column="0" Grid.Row="4" Image="" Clicked="Handle_Clicked" />
					<Label Text="Nascar" Grid.Column="0" Grid.Row="4" FontAttributes="Bold"
					TextColor="Black" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" InputTransparent="true">
					<Label.FontFamily>
						<OnPlatform x:TypeArguments="x:String">
						<OnPlatform.iOS>hurryup</OnPlatform.iOS>
						<OnPlatform.Android>hurryup.ttf#hurryup</OnPlatform.Android>
						</OnPlatform>
					</Label.FontFamily>
					</Label>
					<Button Grid.Column="0" Grid.Row="5" Image="" Clicked="WRC_News" />
					<Label Text="WRC" Grid.Column="0" Grid.Row="5" FontAttributes="Bold"
					TextColor="Black" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" InputTransparent="true">
					<Label.FontFamily>
						<OnPlatform x:TypeArguments="x:String">
						<OnPlatform.iOS>hurryup</OnPlatform.iOS>
						<OnPlatform.Android>hurryup.ttf#hurryup</OnPlatform.Android>
						</OnPlatform>
					</Label.FontFamily>
					</Label> 

					<Button Grid.Column="0" Grid.Row="6" Image="" Clicked="Indy_news" />
					<Label Text="IndyCar" Grid.Column="0" Grid.Row="6" FontAttributes="Bold"
					TextColor="Black" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" InputTransparent="true">
					<Label.FontFamily>
						<OnPlatform x:TypeArguments="x:String">
						<OnPlatform.iOS>hurryup</OnPlatform.iOS>
						<OnPlatform.Android>hurryup.ttf#hurryup</OnPlatform.Android>
						</OnPlatform>
					</Label.FontFamily>
					</Label> 
				</Grid>
	</ContentPage.Content>
