<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="Up2Racev2.Contact" Title="Contact Us!!">
	<ContentPage.Content>

			<!---->

			<ScrollView>	
			<StackLayout Margin="25">
				<Label TextColor="Black" Text="Your opinion is important, help us to improve!!!" FontAttributes="Bold" >
					<Label.FontFamily>
						<OnPlatform x:TypeArguments="x:String">
						<OnPlatform.iOS>hurryup</OnPlatform.iOS>
						<OnPlatform.Android>hurryup.ttf#hurryup</OnPlatform.Android>
						</OnPlatform>
					</Label.FontFamily>
				</Label>

				<Label TextColor="Black" Text="If you have a blog or a website and you wan't to be in our app, just tell us!!" FontAttributes="Bold" >
					<Label.FontFamily>
						<OnPlatform x:TypeArguments="x:String">
						<OnPlatform.iOS>hurryup</OnPlatform.iOS>
						<OnPlatform.Android>hurryup.ttf#hurryup</OnPlatform.Android>
						</OnPlatform>
					</Label.FontFamily>
				</Label>
				
				
				<Label Text="Name" TextColor="Blue" FontSize="12" Margin="10" FontAttributes="Bold">
					<Label.FontFamily>
						<OnPlatform x:TypeArguments="x:String">
						<OnPlatform.iOS>hurryup</OnPlatform.iOS>
						<OnPlatform.Android>hurryup.ttf#hurryup</OnPlatform.Android>
						</OnPlatform>
					</Label.FontFamily>
				</Label>
				<Entry x:Name="_name" />
				<Label Text="e-mail" TextColor="Blue" FontSize="12" Margin="10" FontAttributes="Bold">
					<Label.FontFamily>
						<OnPlatform x:TypeArguments="x:String">
						<OnPlatform.iOS>hurryup</OnPlatform.iOS>
						<OnPlatform.Android>hurryup.ttf#hurryup</OnPlatform.Android>
						</OnPlatform>
					</Label.FontFamily>
				</Label>
				<Entry x:Name="email" />		
				<Label Text="Message" TextColor="Blue" FontSize="12" Margin="10" FontAttributes="Bold">
					<Label.FontFamily>
						<OnPlatform x:TypeArguments="x:String">
						<OnPlatform.iOS>hurryup</OnPlatform.iOS>
						<OnPlatform.Android>hurryup.ttf#hurryup</OnPlatform.Android>
						</OnPlatform>
					</Label.FontFamily>
				</Label>
				<Editor x:Name="message" HeightRequest="120" WidthRequest="120" />
				
				<Button Text="SEND" TextColor="White" FontAttributes="Bold"
					BackgroundColor="Black" BorderRadius="0" 
					HeightRequest="35" Margin="0,10" Clicked="Handle_Clicked">
					<Button.FontFamily>
						<OnPlatform x:TypeArguments="x:String">
						<OnPlatform.iOS>hurryup</OnPlatform.iOS>
						<OnPlatform.Android>hurryup.ttf#hurryup</OnPlatform.Android>
						</OnPlatform>
					</Button.FontFamily>
				</Button>

			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>
